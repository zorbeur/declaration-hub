# Configuration d'environnement pour l'API Declaration Hub
# Copier en .env et remplir avec vos valeurs

# Django
DEBUG=False
SECRET_KEY=your-secret-key-here-min-50-chars-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Base de données (SQLite par défaut)
DATABASE_URL=sqlite:///db.sqlite3
# Pour PostgreSQL:
# DATABASE_URL=postgres://user:password@localhost:5432/declaration_hub

# SMTP - Configuration email (Gmail exemple)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-not-gmail-password
SMTP_FROM=noreply@example.com

# Security
SECURE_SSL_REDIRECT=False  # True en production
SESSION_COOKIE_SECURE=False  # True en production
CSRF_COOKIE_SECURE=False  # True en production

# CORS - Domaines frontend autorisés
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Limites
MAX_FILE_UPLOAD_SIZE=52428800  # 50MB en bytes
JWT_ACCESS_TOKEN_LIFETIME=3600  # 60 minutes en secondes
JWT_REFRESH_TOKEN_LIFETIME=604800  # 7 jours en secondes

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# Email - Autres fournisseurs (décommenter au besoin)

# Sendgrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=SG.your-sendgrid-key

# Outlook/Office365
# SMTP_HOST=smtp.office365.com
